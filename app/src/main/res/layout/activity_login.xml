<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/btn_textbox_close"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/login_logo_iv"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_flo_logo"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/login_id_et"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:inputType="text"
        android:hint="아이디(이메일)"
        android:backgroundTint="@color/gray_color"
        app:layout_constraintTop_toBottomOf="@id/login_logo_iv"
        app:layout_constraintEnd_toStartOf="@id/login_at_tv"/>

    <TextView
        android:id="@+id/login_at_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" @ "
        app:layout_constraintTop_toTopOf="@id/login_id_et"
        app:layout_constraintBottom_toBottomOf="@id/login_id_et"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/login_address_et"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:hint="직접입력"
        android:backgroundTint="@color/gray_color"
        app:layout_constraintTop_toTopOf="@id/login_id_et"
        app:layout_constraintStart_toEndOf="@id/login_at_tv"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/nugu_btn_down"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="@id/login_address_et"
        app:layout_constraintBottom_toBottomOf="@id/login_address_et"
        app:layout_constraintEnd_toEndOf="@id/login_address_et"/>
    <EditText
        android:id="@+id/login_password_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:inputType="textPassword"
        android:hint="비밀번호"
        android:backgroundTint="@color/gray_color"
        app:layout_constraintTop_toBottomOf="@id/login_id_et"
        app:layout_constraintStart_toStartOf="@id/login_id_et"
        app:layout_constraintEnd_toEndOf="@id/login_address_et"/>

    <TextView
        android:id="@+id/login_signin_tv"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="로그인"
        android:layout_marginTop="30dp"
        android:background="@color/select_color"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/login_password_et"
        app:layout_constraintStart_toStartOf="@id/login_password_et"
        app:layout_constraintEnd_toEndOf="@id/login_password_et"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_input_password"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="@id/login_password_et"
        app:layout_constraintBottom_toBottomOf="@id/login_password_et"
        app:layout_constraintEnd_toEndOf="@id/login_password_et"/>

    <TextView
        android:id="@+id/login_find_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디 찾기 | 비밀번호 찾기"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/login_signin_tv"
        app:layout_constraintStart_toStartOf="@id/login_signin_tv"/>

    <TextView
        android:id="@+id/login_signup_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/login_signin_tv"
        app:layout_constraintTop_toTopOf="@id/login_find_tv"/>

    <TextView
        android:id="@+id/login_Tlogin_tv"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="아이디로 로그인"
        android:layout_marginTop="30dp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/login_find_tv"
        app:layout_constraintStart_toStartOf="@id/login_password_et"
        app:layout_constraintEnd_toEndOf="@id/login_password_et"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ico_20_logo_tid_white"
        android:layout_marginStart="100dp"
        app:layout_constraintStart_toStartOf="@id/login_Tlogin_tv"
        app:layout_constraintTop_toTopOf="@id/login_Tlogin_tv"
        app:layout_constraintBottom_toBottomOf="@id/login_Tlogin_tv"/>

    <TextView
        android:id="@+id/login_numlogin_tv"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="휴대폰 번호 로그인"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:textStyle="bold"
        android:background="@drawable/edge"
        app:layout_constraintTop_toBottomOf="@id/login_Tlogin_tv"
        app:layout_constraintStart_toStartOf="@id/login_password_et"
        app:layout_constraintEnd_toEndOf="@id/login_password_et"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/btn_setting_phone"
        android:layout_marginStart="95dp"
        app:layout_constraintStart_toStartOf="@id/login_numlogin_tv"
        app:layout_constraintTop_toTopOf="@id/login_numlogin_tv"
        app:layout_constraintBottom_toBottomOf="@id/login_numlogin_tv"/>

    <ImageView
        android:id="@+id/login_kakao_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/kakako_44"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_numlogin_tv"/>

    <ImageView
        android:id="@+id/login_naver_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/naver_44"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toStartOf="@id/login_kakao_iv"
        app:layout_constraintTop_toTopOf="@id/login_kakao_iv"/>

    <ImageView
        android:id="@+id/login_apple_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/apple_44"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/login_kakao_iv"
        app:layout_constraintTop_toTopOf="@id/login_kakao_iv"/>


</androidx.constraintlayout.widget.ConstraintLayout>