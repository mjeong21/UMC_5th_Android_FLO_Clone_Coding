<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/video_new_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최신순"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/video_down_iv"/>
            <ImageView
                android:id="@+id/video_down_iv"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/down"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toTopOf="@id/video_new_tv"
                app:layout_constraintBottom_toBottomOf="@id/video_new_tv"
                app:layout_constraintEnd_toEndOf="parent"/>

            <LinearLayout
                android:id="@+id/video1_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/video_new_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/video_image1_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:src="@drawable/video1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                    <TextView
                        android:id="@+id/video_title1_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[MV] Coin"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="@id/video_image1_iv"
                        app:layout_constraintTop_toBottomOf="@id/video_image1_iv"/>
                    <TextView
                        android:id="@+id/video_singer1_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아이유 (IU) | 2021.03.26"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="@id/video_title1_tv"
                        app:layout_constraintTop_toBottomOf="@id/video_title1_tv"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/video2_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/video1_ll"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/video_image2_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:src="@drawable/video2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                    <TextView
                        android:id="@+id/video_title2_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[MV] 라일락 (LILAC)"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="@id/video_image2_iv"
                        app:layout_constraintTop_toBottomOf="@id/video_image2_iv"/>
                    <TextView
                        android:id="@+id/video_singer2_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아이유 (IU) | 2021.03.25"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="@id/video_title2_tv"
                        app:layout_constraintTop_toBottomOf="@id/video_title2_tv"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/video3_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/video2_ll"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/video_image3_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:src="@drawable/video3"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                    <TextView
                        android:id="@+id/video_title3_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[MV] 라일락 (LILAC)"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="@id/video_image3_iv"
                        app:layout_constraintTop_toBottomOf="@id/video_image3_iv"/>
                    <TextView
                        android:id="@+id/video_singer3_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아이유 (IU) | 2021.03.24"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="@id/video_title3_tv"
                        app:layout_constraintTop_toBottomOf="@id/video_title3_tv"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/video4_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/video3_ll"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/video_image4_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:src="@drawable/video4"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                    <TextView
                        android:id="@+id/video_title4_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[MV] 라일락 (LILAC)"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="@id/video_image4_iv"
                        app:layout_constraintTop_toBottomOf="@id/video_image4_iv"/>
                    <TextView
                        android:id="@+id/video_singer4_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아이유 (IU) | 2021.03.24"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="@id/video_title4_tv"
                        app:layout_constraintTop_toBottomOf="@id/video_title4_tv"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>