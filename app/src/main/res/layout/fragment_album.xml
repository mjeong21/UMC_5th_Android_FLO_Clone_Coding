<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/album_back_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/btn_arrow_black"
        android:layout_marginStart="15dp"
        android:layout_marginTop="35dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/album_like_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_my_like_off"
        android:scaleType="fitXY"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="@id/album_back_iv"
        app:layout_constraintBottom_toBottomOf="@id/album_back_iv"
        app:layout_constraintEnd_toStartOf="@id/album_more_iv"/>
    <ImageView
        android:id="@+id/album_more_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/btn_player_more"
        android:layout_marginEnd="15dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="@id/album_like_iv"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/album_music_title_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IU 5th Album 'LILAC'"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/album_back_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/album_singer_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이유 (IU)"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/album_music_title_tv1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/album_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021.03.25|정규|댄스 팝"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/album_singer_tv1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/album_image_lp_iv"
        android:layout_width="50dp"
        android:layout_height="200dp"
        android:src="@drawable/img_album_lp"
        android:layout_marginEnd="65dp"
        app:layout_constraintTop_toTopOf="@id/album_image_iv"
        app:layout_constraintBottom_toBottomOf="@id/album_image_iv"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/album_image_iv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/img_album_exp2"
        android:layout_marginTop="15dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@id/album_info_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/widget_black_play"
        app:layout_constraintBottom_toBottomOf="@+id/album_image_iv"
        app:layout_constraintEnd_toEndOf="@id/album_image_iv"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/album_content_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorFullWidth="false"
        app:tabSelectedTextColor="#3f3fff"
        app:tabIndicatorColor="#3f3fff"
        app:tabRippleColor="#00ff0000"
        app:layout_constraintEnd_toEndOf="@id/album_image_iv"
        app:layout_constraintStart_toStartOf="@id/album_image_iv"
        app:layout_constraintTop_toBottomOf="@id/album_image_iv"/>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/album_content_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/album_content_tb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>